<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developers"
    android:orientation="vertical"
    android:background="@color/devs"
    >
    <include layout="@layout/app_bar"
        android:id="@+id/dev_toolbar"
        ></include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="3dp"
        android:id="@+id/dev_img"
        android:src="@drawable/img_model"
        android:layout_below="@id/dev_toolbar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FBFBFB"
        android:layout_centerHorizontal="true"
        />
            <TextView
                android:id="@+id/dev_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jhonathan Gutierrez"
                android:textSize="34sp"
                android:layout_below="@id/dev_img"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/shadows_into_light_regular"
                android:textColor="#fff"
                />

</RelativeLayout>